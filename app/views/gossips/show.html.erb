
<% if current_user %>
<% g = @gossips %>

<h5 class="mt-2">
  <%= link_to "#{@gossips.user.first_name} #{@gossips.user.last_name}", author_path(@gossips.user.id) %>
</h5>
<p class="title-gossip pt-3"> <%= @gossips.title %> </p>
  <p class ="content-gossip"> <%= @gossips.content %> </p>
  <% pre_like = @gossips.likes.find { |like| like.user_id == current_user.id} %>
  <% if pre_like %>
    <a class="font-weight-light text-danger small" href="<%=gossip_like_path(g.id, pre_like)%> " data-method="DELETE">Unlike</a>
  <% else %>
    <a class="font-weight-light text-success small" href="<%=gossip_likes_path(g.id)%> " data-method="POST">Like</a>
  <% end %>

  <p class="small text-muted"><%= g.likes.count %> like(s)</p>

<hr>
