
  <%# <%= "Please input correct fields" %>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<%= form_tag url_for(action: 'create'), method: "post" do %>

<%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title %>
      <br /> <br />

      <%= label_tag 'Content' %>
      <%= text_area_tag 'content', @gossip.content %>
      <br /> <br />

<%= submit_tag "Create Post" %>

<% end %>


<% if @gossip.errors.any? %>
</br>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Dommage!</h4>
    <p>
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </p>
    <%# <hr> %>
  </div>
<% end %>
