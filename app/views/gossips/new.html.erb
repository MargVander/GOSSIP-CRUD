
  <%# <%= "Please input correct fields" %>
  <div class="card">
    <ul class="list-group-item list-group-flush">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <li class="list-group-item">
        <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title, class: 'form-control' %>
    </li>
    <li class="list-group-item">
      <%= label_tag 'Content' %>
        <%= text_area_tag 'content', @gossip.content, class: 'form-control' %>
          </li>
            <li class="list-group-item">
          <%= submit_tag "Create Post", class: 'btn' %>
        </li>
      <% end %>
    </ul>
  </div>


<% if @gossip.errors.any? %>
</br>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Dommage!</h4>
    <p>
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </p>
    <%# <hr> %>
  </div>
<% end %>
